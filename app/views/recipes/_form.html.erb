 <%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_area :title %>
    <br>
    <%= f.fields_for :ingredients do |i| %>
        <%= i.label :name %>
        <%= i.text_area :name %>
        <br>
        <%= i.label :quantity %>
        <%= i.text_area :quantity %>
        <br>
    <% end %>
    <%= f.submit %>
<% end %>